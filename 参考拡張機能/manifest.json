{
  "manifest_version": 3,
  "name": "Amazon Automation",
  "version": "1.0",
  "description": "Amazonの自動化を支援するChrome拡張機能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "cookies",
    "scripting",
    "tabs",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "サイドパネルを開く"
  },
  "host_permissions": [
    "https://script.google.com/macros/s/AKfycbyQXxyTSz4sqBdQw6ZPJb-ORO-FEfiJS1x2jT5ZUcKss93U5GHrRpStxj3Vlmhm3D7x/*",
    "https://www.amazon.co.jp/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*",
    "https://accounts.google.com/*"
  ]
}
